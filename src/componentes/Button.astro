---
import "../styles/global.css";

const { text } = Astro.props;
---

<div>
  <button type="button">{text}</button>
</div>

<style>
  button {
    background-color: var(--primary01);
    border-radius: 20px;
    line-height: 1.6;
    gap: 10px;
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 4px;
    padding-bottom: 4px;
  }
</style>
