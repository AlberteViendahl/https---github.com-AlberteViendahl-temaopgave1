---
import "../styles/global.css";
import Popup from "../componentes/Popup.astro";
---

<article class="grid">
  <h1><a href="/">AskExperts</a></h1>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/casestudy">Case Study</a></li>
    <li><a href="/team">Team</a></li>
    <li><a href="/about">About</a></li>
  </ul>
  <div class="knap">
    <Popup />
  </div>
</article>

<style>
  article {
    background-color: var(--nav);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  h1 {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: var(--heading05);
    color: var(--secondary02);
    font-family: "cabin";
  }

  ul {
    list-style: none;
    display: flex;
    justify-content: space-between;
    padding: 28px;
  }

  li,
  a {
    color: var(--secondary02);
    text-decoration: none;
    font-family: "lato";
  }

  .knap {
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary03);
  }

  @media (width < 900px) {
    h1 {
      font-size: var(--heading07);
    }

    .grid {
      display: flex;
      justify-content: space-around;
    }

    li {
      padding: 7px;
    }
  }
</style>
