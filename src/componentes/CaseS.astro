<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    max-width: 1100px;
    margin: 0 auto;
    text-align: left;
  }

  button {
    color: var(--overskrift);
    background-color: var(--primary01);
    border-radius: 24px;
    padding: 3px;
    width: 130px;
    height: 40px;
  }

  .h1 {
    color: var(--secondary02);
    padding-left: 5px;
    gap: 7rem;
    font-size: var(--footer);
    font-family: "lato";
    font-weight: bold;
    margin-bottom: -2px;
  }

  .h2 {
    color: var(--secondary02);
    padding-left: 5px;
    gap: 7rem;
    font-size: var(--footer);
    font-family: "lato";
    margin-top: -2px;
  }
  .img {
    max-width: 900px;
    border-radius: 24px;
    margin-bottom: 20px;
    position: relative;
  }

  .box {
    position: absolute;
    right: 22%;
    bottom: -10rem;
    background-color: var(--overskrift);
    z-index: 1;
    width: 800px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-radius: 20px;
    padding: 7px;
    height: 100px;
    color: var(--secondary02);
  }

  article {
    max-width: 700px;
    text-align: center;
    padding: 20px;
    margin-bottom: 20px;
  }

  h2,
  h3 {
    color: var(--overskrift);
    text-align: left;
    font-family: "cabin";
  }

  p {
    color: var(--overskrift);
    margin-top: 1rem;
    text-align: left;
    font-family: "lato";
    font-size: var(--footer);
  }

  img {
    max-width: 100%;
    height: auto;
    margin: 20px auto;
  }

  article h2 {
    font-size: var(--heading05);
    font-weight: bold;
    padding-top: 20px;
    font-family: "cabin";
  }

  article h3 {
    font-size: var(--heading06);
    font-weight: bold;
    font-family: "cabin";
  }

  .img2 {
    width: 500px;
  }

  @media (width < 900px) {
    .box {
      display: none;
    }
  }
</style>
