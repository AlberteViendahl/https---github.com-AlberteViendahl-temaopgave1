---
const { cardContent } = Astro.props;
import "../styles/global.css";
---

<div>
  <img src="../src/icons/billede.svg" alt="" />
  <h1>Financial Projections</h1>
  <p class="h">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
    consequat.
  </p>
  <ul class="full-width">
    {
      cardContent.map((card) => (
        <li>
          <h3>{card.title}</h3>
          <p>{card.body}</p>
        </li>
      ))
    }
  </ul>
</div>

<style>
  div {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns:
      [full-start] 1fr [content-start] minmax(0, 1100px)
      [content-end] 1fr [full-end];
    gap: 1rem;

    > * {
      grid-column: content;
    }
  }

  img {
    max-width: 100px;
    padding-top: 100px;
  }

  .full-width {
    grid-column: content;
  }

  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    list-style: none;
    background-color: var(--secondary01);
    height: 300px;
    scroll-snap-type: x mandatory;
    padding-inline: max(1rem, 50% - var(--content-width) / 2);
    padding-block-end: 1rem;

    li {
      flex: 0 0 auto;
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      align-self: start;
      border-radius: 24px;
      padding: 40px;
      scroll-snap-align: center;
    }
  }

  ul li:hover {
    background-color: var(--secondary03);
    color: var(--secondary02);
  }
  div {
    background-color: var(--secondary01);
    margin-top: 50px;
  }

  h1 {
    padding-top: 20px;
    font-size: var(--heading03);
    font-family: "cabin";
    margin-inline: left;
    max-width: 100%;
  }

  p {
    max-width: 75ch;
    padding-top: 20px;
    margin-inline: left;
    font-family: "lato";
  }

  h3 {
    font-size: var(--heading07);
    font-weight: bold;
    counter-reset: var(--overskift);
  }

  /*   RESPONSIV */
  @media (width < 900px) {
    div {
      display: revert;
      margin-top: 380px;
    }

    h1 {
      font-size: var(--heading06);
      padding-left: 50px;
      font-family: "cabin";
    }
    .h {
      padding-left: 50px;

      padding: min(3rem, 5%);
      width: min(65ch, 100% - 2rem);
      margin-inline: auto;
    }

    img {
      max-width: 120px;
      padding-top: 90px;
      padding-left: 50px;
    }
  }
</style>
