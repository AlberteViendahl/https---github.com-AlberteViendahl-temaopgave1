<style>
  section {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns:
      [full-start] 1fr [content-start] minmax(0, 1100px)
      [content-end] 1fr [full-end];
    gap: 1rlh;
    background-color: var(--overskrift);

    > * {
      grid-column: content;
    }
  }

  h2 {
    color: var(--secondary01);
    font-size: var(--heading02);
  }

  .text {
    color: var(--secondary01);
    padding-bottom: 50px;
    max-width: 65ch;
  }

  h3 {
    color: var(--overskrift);
  }

  p {
    color: var(--overskrift);
    padding-bottom: 10px;
  }

  @layer {
    body {
      font-family: system-ui, sans-serif;
    }

    h2,
    h3 {
      font: revert;
      margin-block: 0 0.35em;
    }

    .grid {
      display: grid;
      grid: auto / repeat(4, 1fr);
      gap: 1rem;
    }

    .card {
      padding: 20px 20px;
      gap: 10px;
      border-radius: 24px;
      background-color: var(--secondary01);
      margin-bottom: 100px;
      height: fit-content;
    }

    img {
      width: 52.778px;
      height: 52.778px;
      padding-bottom: 20px;
    }
  }

  button {
    background-color: var(--primary01);
    border-radius: 24px;
    max-width: 290px;
    margin-top: 40px;
    margin-bottom: -30px;
    letter-spacing: 2.32px;
  }

  /*   RESPONSIV */

  @media (width < 900px) {
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    h2 {
      font-size: var(--heading06);
      padding-top: 20px;
      padding-left: 50px;
    }

    .card {
      gap: 10px;
      border-radius: 24px;
      background-color: var(--secondary01);
      height: fit-content;
      max-width: 300px;
    }

    .text {
      max-width: 40ch;
      padding-left: 50px;
    }

    button {
      margin-left: 50px;
    }
  }
</style>

