---
import "../styles/global.css";
import { Image } from "astro:assets";
import image1 from "../assets/images/sarah.jpg";
---

<div class="top">
  <div class="text1">
    <h1>Adam Buschemia Business Consultant</h1>
    <p class="bp">
      Get help from Alex Moore, a professional business coach with advanced
      experience on growth and business scaling.
    </p>
    <button class="button" type="button">Book a Meeting</button>
  </div>

  <Image src={image1} alt="Sarah" class="img" />
</div>
<article>
  <div class="box1">
    <h2>Finance & Restructuring</h2>
    <p class="p">
      Get help from Alex Moore, a professional business coach with advanced
      experience on growth and business scaling.
    </p>
    <div class="knaps"><button>Our Services</button></div>
  </div>

  <div class="box2">
    <h2>Finance & Restructuring</h2>
    <p class="p">
      Get help from Alex Moore, a professional business coach with advanced
      experience on growth and business scaling.
    </p>
    <div class="knaps"><button>Our Services</button></div>
  </div>

  <div class="box3">
    <h2>Finance & Restructuring</h2>
    <p class="p">
      Get help from Alex Moore, a professional business coach with advanced
      experience on growth and business scaling.
    </p>
    <div class="knaps"><button>Our Services</button></div>
  </div>
</article>

<style>
  article {
    background-color: var(--secondary02);
  }

  .top {
    background-color: var(--primary03);
    display: flex;
    width: 100%;
    height: 600px;
    flex-shrink: 0;
    position: relative;
    align-items: center; 
    justify-content: center; 
    overflow: hidden;
  }

  .box1 {
    position: absolute;
    right: 64%;
    bottom: -7rem;
    background-color: var(--secondary03);
    z-index: 1;
    max-width: 350px;
    padding: 46px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 20px;

    /*   flex: 1 0 0; */
  }

  .box2 {
    position: absolute;
    right: 38%;
    bottom: -7rem;
    background-color: var(--secondary03);
    z-index: 1;
    max-width: 350px;
    padding: 46px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 20px;
  }

  .box3 {
    position: absolute;
    left: 64%;
    bottom: -7rem;
    background-color: var(--secondary03);
    z-index: 1;
    max-width: 350px;
    padding: 46px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 20px;
  }

  h2 {
    font-size: var(--heading07);
    color: var(--secondary02);
    padding-bottom: 10px;
    font-weight: bold;
  }

  .p {
    max-width: 300px;
  }

  .text1 {
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; 
    position: relative; 
    top: -100px; 
    padding-left: 200px;
  }

  h1 {
    font-size: var(--heading01);
    color: var(--secondary02);
    max-width: 15ch;
    line-height: 1.3em;
  }

  p {
    color: var(--secondary02);
    max-width: 40ch;
    font-size: var(--footer);
    text-align: left;
  }

  .bp{
    margin-top: 20px;
  }

  img {
    flex-basis: 50%;center;
    background-size: cover; 
  }

  button {
    border-radius: 42px;
    border: 1px solid #252121;
    background: black;

    display: flex;
    padding: 14px 27px;
    flex-direction: column;
    align-self: flex-start;
    gap: 10px;
    margin-top: 21px;

    color: aliceblue;
    
  }

  .button {
    border-radius: 42px;
    border: 1px solid #ebebeb;
    background: var(--secondary02);

    display: flex;
    padding: 16px 31px;
    flex-direction: column;
    align-self: flex-start;
    gap: 10px;
    margin-top: 35px;

    color: #252121;
  }

/*   RESPONSIV */

@media (width < 900px) {
  .box1, .box2, .box3 {
    display: none;
  }

  h1{
    font-size: var(--heading05);
   
  }

.img{
  display: none;
}

.text1{
  display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; 
    position: relative;
    padding-left: 0;
    padding-top: 30%;
}

.top{
  height: 400px;
}
}

</style>

